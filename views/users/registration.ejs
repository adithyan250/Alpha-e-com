    <script>
        function formValidator() {
            let name = document.Register.name.value;
            let email = document.Register.email.value;
            let atpos = email.indexOf('@');
            let dotpos = email.indexOf('.');
            let phone = document.Register.phone.value;
            let pass = document.Register.password.value;
            let conpass = document.Register.confirmPassword.value
            if(name === null || name === ""){
                alert("Enter the Name...");
                return false;
            }else if (name.length < 3) {
                alert("Enter a vaild name...");
                return false;
            }else if(atpos < 1 || dotpos < atpos+2 || dotpos + 2 > email.length ){
                alert("Enter a vaild Email Id...");
                return false;
            }else if (phone.length !== 10){
                alert("Enter a vaild Phone number...");
                return false;
            }else if (pass === null || pass === ""){
                alert("Enter a password...");
                return false;
            }else if(pass.length < 6){
                alert("Password must be atleast 6 Characters...");
                return false;
            }else if (pass !== conpass){
                alert("passwords should be same...");
                return false;
            }else{
                return true;
            }
        }
    </script>

