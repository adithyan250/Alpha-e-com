<%- include('./layouts/header.ejs')%>
    <%- include('./layouts/navbar.ejs')%>

        <table cellpadding="0" cellspacing="0"
            style="font-family: DM Sans, sans-serif; font-size: 16px; font-weight: 400; width: 600px; border: none; margin: 0 auto; border-radius: 6px; overflow: hidden; background-color: #fff; box-shadow: 0 0 3px rgba(60, 72, 88, 0.15);">
            <thead style="padding: 16px; display: block;">

            </thead>

            <tbody>
                <tr>
                    <td
                        style="padding: 24px 16px; background: #f8fafc; display: flex; flex-direction: column; align-items: center;">
                        <img src="assets/images/order-success.svg" width="200px" alt="">
                        <h1 style="font-weight: 600; margin: 16px 0 0;">Thank you!</h1>
                    </td>
                </tr>

                <tr>
                    <td style="padding: 16px 16px 0; color: #161c2d;">
                        <p style="margin: 0; font-size: 18px; font-weight: 500;">Hello, <%=user.name%>!</p>
                        <p style="margin-bottom: 0; color: #94a3b8;">Thank you for your order success. Payment is
                            proceed successfull and your order (Order Id: <%=order[0].orderId%>) is on the way. Please
                                check your order via <span style="font-weight: 500; color: #161c2d;">Transaction ID:
                                    <%=order[0].paymentId.razorpay_payment_id%>
                                </span>
                        </p>
                    </td>
                </tr>

                <tr>
                    <td style="padding: 16px;">
                        <table
                            style="width: 100%; box-shadow: 0 0 3px rgba(60, 72, 88, 0.15); border-radius: 6px; background-color: #fff;">
                            <thead style="text-transform: uppercase; background-color: #f8fafc;">
                                <tr>
                                    <th scope="col" style="text-align: left; padding: 10px 16px; border: none;">
                                        Product</th>
                                    <th scope="col" style="padding: 10px 16px; border: none;">Price</th>
                                    <th scope="col" style="padding: 10px 16px; border: none;">Qty</th>
                                    <th scope="col" style="text-align: right; padding: 10px 16px; border: none;">
                                        Total($)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let i=0; i<product.length;i++){%>
                                    <tr>
                                        <td style="padding: 16px;">
                                            <span style="display: flex; align-items: center;">
                                                <img src="/images/products/<%=product[0].images[0]%>"
                                                    style="width: 48px; box-shadow: 0 0 3px rgba(60, 72, 88, 0.15); border-radius: 6px;"
                                                    alt="">
                                                <span style="margin-left: 8px;">
                                                    <span style="font-weight: 500;">
                                                        <%= product[i].title%>
                                                    </span>
                                                </span>
                                            </span>
                                        </td>
                                        <td style="text-align: center; padding: 16px;">
                                            <%= product[i].price%>
                                        </td>
                                        <td style="text-align: center; padding: 16px;">
                                            <%= order[i].quantity%>
                                        </td>
                                        <td style="text-align: right; padding: 16px;">
                                            <%= product[i].price*order[i].quantity%>
                                        </td>
                                    </tr>
                                    <%}%>
                            </tbody>
                        </table>
                    </td>
                </tr>

                <tr>
                    <td style="padding: 0 16px 16px;">
                        <table
                            style="width: 240px; box-shadow: 0 0 3px rgba(60, 72, 88, 0.15); border-radius: 6px; margin-left: auto;">
                            <tbody>
                                <tr>
                                    <td style="text-align: right; padding: 16px;">
                                        <table style="width: 100%;">
                                            <tr style="list-style: none; padding: 0; margin: 0;">
                                                <td
                                                    style="display: flex; justify-content: space-between; padding: 0 0 10px;">
                                                    <span style="font-weight: 500;">Subtotal :</span>
                                                    <span style="color: #94a3b8;">$ 940</span>
                                                </td>
                                                <td
                                                    style="display: flex; justify-content: space-between; padding: 10px 0; border-top: 1px solid #f3f4f6;">
                                                    <span style="font-weight: 500;">Taxes :</span>
                                                    <span style="color: #94a3b8;">$ 94</span>
                                                </td>
                                                <td
                                                    style="display: flex; justify-content: space-between; padding: 10px 0 0; border-top: 1px solid #f3f4f6;">
                                                    <span style="font-weight: 600;">Total :</span>
                                                    <span style="font-weight: 600;">$ 1034</span>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 0 16px 16px;
                    display: flex;
                    flex-direction: row-reverse;">
                        <a href="/home">
                            <button class="py-2 px-5 inline-block font-semibold tracking-wide align-middle duration-500 text-base text-center bg-orange-500 text-white rounded-md mt-5">
                                Continue Shopping
                            </button>
                        </a>
                    </td>
                </tr>
            </tbody>

        </table>
        <!-- Hero End -->
        <%- include('./layouts/footer.ejs')%>