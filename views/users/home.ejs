                <!--end grid-->
            </div>
            <!--end container-->
        </section>
        <!--end section-->
        <!-- End Hero -->

        <!-- Start -->
        <section class="relative md:py-24 py-16">
            <div class="container relative">
                <div class="grid items-end md:grid-cols-2 mb-6">
                    <div class="md:text-start text-center">
                        <h5 class="font-semibold text-3xl leading-normal mb-4">Latest Items</h5>
                        <p class="text-slate-400 max-w-xl">Shop the latest products from the most popular items</p>
                    </div>

                    <div class="md:text-end">
                        <a href="shop-grid.html" class="text-slate-400 hover:text-orange-500">See More Items <i class="mdi mdi-arrow-right"></i></a>
                    </div>
                </div><!--end grid-->

                <div class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1 pt-6 gap-6">
                    <%for(let i = 0;i<products.length&&8;i++){%>
                    <div class="group">
                        <div class="relative overflow-hidden shadow dark:shadow-gray-800 group-hover:shadow-lg group-hover:dark:shadow-gray-800 rounded-md duration-500">
                            <img src="userImages/<%=products[i].images[0]%>" class="group-hover:scale-110 duration-500" alt="">
    
                            <div class="absolute -bottom-20 group-hover:bottom-3 start-3 end-3 duration-500">
                                <a href="/addcart?product_id=<%=products[i]._id %>" class="py-2 px-5 inline-block font-semibold tracking-wide align-middle duration-500 text-base text-center bg-slate-900 text-white w-full rounded-md">Add to Cart</a>
                            </div>
    
                            <ul class="list-none absolute top-[10px] end-4 opacity-0 group-hover:opacity-100 duration-500 space-y-1">
                                <li><a href="javascript:void(0)" class="size-10 inline-flex items-center justify-center tracking-wide align-middle duration-500 text-center rounded-full bg-white text-slate-900 hover:bg-slate-900 hover:text-white shadow"><i data-feather="heart" class="size-4"></i></a></li>
                                <li class="mt-1"><a href="/product_details?id=<%=products[i]._id%>" class="size-10 inline-flex items-center justify-center tracking-wide align-middle duration-500 text-center rounded-full bg-white text-slate-900 hover:bg-slate-900 hover:text-white shadow"><i data-feather="eye" class="size-4"></i></a></li>
                                <!-- <li class="mt-1"><a href="javascript:void(0)" class="size-10 inline-flex items-center justify-center tracking-wide align-middle duration-500 text-center rounded-full bg-white text-slate-900 hover:bg-slate-900 hover:text-white shadow"><i data-feather="bookmark" class="size-4"></i></a></li> -->
                            </ul>

                            <ul class="list-none absolute top-[10px] start-4">
                                <%if(typeof products[i].discount !== 'undefined'){%>
                                <li><a href="javascript:void(0)" class="bg-orange-600 text-white text-[10px] font-bold px-2.5 py-0.5 rounded h-5">-<%=products[i].discount%>% Off</a></li>
                                <%}%>
                            </ul>
                        </div>

                        <div class="mt-4">
                            <a href="/product_details?id=<%=products[i]._id%>" class="hover:text-orange-500 text-lg font-medium"><%=products[i].title %></a>
                            <div class="flex justify-between items-center mt-1">
                                <p>₹<%if(typeof products[i].discount !== 'undefined'){%>
                                    <%let lastPrice = (products[i].price*100)/(100-products[i].discount)%>
                                    <%=Math.floor(lastPrice)%>
                                    <%}else{%>
                                    <%=products[i].price%>
                                    <%}%>
                                    <del class="text-slate-400">₹<%=products[i].price%></del></p>
                                <ul class="font-medium text-amber-400 list-none">
                                    <li class="inline"><i class="mdi mdi-star"></i></li>
                                    <li class="inline"><i class="mdi mdi-star"></i></li>
                                    <li class="inline"><i class="mdi mdi-star"></i></li>
                                    <li class="inline"><i class="mdi mdi-star"></i></li>
                                    <li class="inline"><i class="mdi mdi-star"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <%}%>
                    <!--end content-->
                </div><!--end grid-->
            </div><!--end container-->
        </section><!--end section-->
        <!-- End -->
        </section>
        <!--end section-->
        <!-- End --> 
        <!-- Footer Start -->
        <%- include('./layouts/footer.ejs')%>