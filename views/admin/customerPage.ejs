                            <a>
                    </div>
                </div>
                <div class="categorycenter">
                    <div class="categoryList">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">user Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">email</th>
                                    <th scope="col">status</th>
                                    <th scope="col">actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let i=0;i< userData.length ;i++){%>
                                    <tr>
                                        <th scope="row">
                                            <%=userData[i].id%>
                                        </th>
                                        <td>
                                            <%=userData[i].name%>
                                        </td>
                                        <td>
                                            <%=userData[i].email%>
                                        </td>
                                        <td>
                                            <%if(userData[i].status==="true" ){%>
                                                Active
                                                <%}else{%>
                                                    Blocked
                                                    <%}%>
                                        </td>
                                        <td>
                                            <a href="/admin/admin_panel/customers/details?id=<%=userData[i]._id%>"
                                                style="text-decoration: none;">
                                                <button class="button">
                                                    <p class="text">Details</p>
                                                </button>
                                            </a>
                                            <a href="/admin/admin_panel/customers/orders?id=<%=userData[i]._id%>"
                                                style="text-decoration: none;">
                                                <button class="button">
                                                    <p class="text">Orders</p>
                                                </button>
