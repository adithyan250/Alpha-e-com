    <title>Admin Panel: Add Categories</title>
</head>

<body style="margin: 0rem;
    font-family: 'Montserrat', sans-serif;">
    <nav>
        <div class="header" style=" width: auto;
        height: 4rem;
        display: flex;
        justify-content: space-around;
        flex-direction: row;
        background-color: #15161D;">
            <div class="logo"><img src="/userImages/alpha.png" class="headerLogo" style="margin-left: 1rem;
                height: 3rem;
                width: 8rem;
                margin: 0.5rem;">
            </div>
            <div class="headerCenter" style="background-color: white;
            width: 37rem;
            height: 2rem;
            display: flex;
            flex-direction: row;
            margin: 1rem;
            border-radius: 1rem;">
                <div class="dropDown" style="margin-left: 1rem;">
                    <form>
                        <select name="categories" id="categories" class="navSelect" style="height: 2rem;
                        border: 0;">
                            <option value="All Categories">All Categories</option>
                            <option value="SmartPhones">SmartPhones</option>
                            <option value="Laptops">Laptops</option>
                            <option value="Watches">Watches</option>
                            <option value="Accessories">Accessories</option>
                        </select>
                    </form>
                </div>
                <div class="navSearch" style="width: -1rem;">
                    <form class="formSearch" style="background-color: #D10024;
                    width: 29.5rem;
                    border-radius: 2rem;">
                        <input type="text" name="" style="height: 1.89rem;
                        width: 24rem;
                        border: 0px;">
                        <input type="submit" class="navSubmit" style="height: 2rem;
                        margin-left: 0.5rem;
                        background-color: transparent;
                        border: 0;">
                    </form>
                </div>
            </div>
            <div class="navComponents" style="display: flex;
            flex-direction: row;
            justify-content: space-around;">
                <div class="wishList">
                    <div class="wishListLogo" style="padding: 1.4rem;
                    display: flex;
                    flex-direction: column;"><i class="fa-solid fa-heart fa-xl"></i>
                        <img class="wishlisttext" src="/userImages/WishList.png" alt="" style="margin-left: -1.5rem;
                        margin-top: 1rem;">
                    </div>
                </div>
                <div class="cart" style="padding: 1.4rem;">
                    <div class="cartLogo" style="padding: 0.1rem;
                    display: flex;
                    flex-direction: column;"><i class="fa-solid fa-cart-shopping fa-xl"></i>
                        <img class="carttext" src="/userImages/cart.png" alt="" style="margin-left: -0.75rem;
                        margin-top: 1rem;">
                    </div>
                </div>
                <div class="logout" style="margin-top: 0.9rem;">
                    <button style="background-color: #d10024;background-color: #d10024;
                    height: 2rem;
                    width: 5rem;
                    border-radius: 0.5rem;"><a href="/admin/admin_logout" style="text-decoration: none;
                        color: white;">Logout</a></button>
                </div>
            </div>
        </div>
    </nav>
    <main style="display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-start;">
        <div class="sidepanel" style="border: 1px solid black;
            margin: 2rem;
            width: 14vw;
            margin-top: 7rem;
            border-radius: 0.5rem;
            height: fit-content;">
            <div class="heading" style="background-color: #15161d;
                width: auto;
                color: white;
                margin-bottom: 0.5rem;
                border-top-left-radius: 0.5rem;
                border-top-right-radius: 0.5rem;
                display: flex;
                justify-content: center;">
                ADMIN PANEL
            </div>
            <a href="/admin/admin_panel">
                <div class="options">
                    <div class="logo"><i class="fa-solid fa-house fa-xl"></i></div>
                    <div class="text">Dashboard</div>
                </div>
            </a>
            <a href="/admin/admin_panel/products">
                <div class="options">
                    <div class="logo"><i class="material-symbols-outlined">apps</i></div>
                    <div class="text">Products</div>
                </div>
            </a>
            <a href="/admin/admin_panel/customers">
                <div class="options">
                    <div class="logo"><i class="material-symbols-outlined">supervisor_account</i></div>
                    <div class="text">Customers</div>
                </div>
            </a>
            <a href="/admin/admin_panel/orders">
                <div class="options">
                    <div class="logo"><i class="material-symbols-outlined">shopping_cart</i></div>
                    <div class="text">Orders</div>
                </div>
            </a>
            <a href="/admin/admin_panel/category">
                <div class="options">
                    <div class="logo"><i class="material-symbols-outlined">category</i></div>
                    <div class="text">Category</div>
                </div>
            </a>
            <!-- <a href="/admin/admin_panel/banner_manage">
                <div class="options">
                    <div class="logo"><i class="material-symbols-outlined">ad</i></div>
                    <div class="text">Banner Manage</div>
                </div>
            </a>
            <a href="">
                <div class="options">
                    <div class="logo"><i class="fa-solid fa-ticket fa-xl"></i></div>
                    <div class="text">Manage Coupons</div>
                </div>
            </a> -->
        </div>
        <div style="display: flex;
            margin: 2rem;
            flex-direction: column;">
            <div class="categoryTitle" style="margin: 1rem;">
                <h2 style="color: #15161D;">Category</h2>
            </div>
            <div class="categorySide" style="display: flex;
                width: 55vw;
                border-radius: 10px;
                flex-direction: column;
                border: 0.1px solid #15161d;">
                <div style="display: flex;
                    flex-direction: row;
                    justify-content: flex-start;">
                    <div>
                        <h4 style="margin: 1rem;">Edit category</h4>
                    </div>
                </div>
                <div style="display: flex;
                    flex-direction: row;
                    justify-content: center;">
                    <% if(typeof message !=='undefined' ){ %>
                        <h4>
                            <%= message%>
                        </h4>
                        <% } %>
                </div>
                <form action="/admin/admin_panel/category/edit_category" enctype="multipart/form-data" id="edit_product"
                    method="post">
                    <div style="display: flex;
                        flex-direction: row;
                        margin: 1rem;">
                        <div style="display: flex;
                            margin: 1rem;
                            flex-direction: column;">
                            <div>
                                <label for="categoryName">
                                    Category name

                                </label>
                            </div>
                            <div>
                                <input type="text" class="input-style" <%if(typeof category.category_name !=='undefined'
                                    ){%>
                                value="<%= category.category_name %>"
                                    <%}%>
                                        name="categoryName" id="categoryName" style="width: 23vw;" required>
                                        <input type="hidden" name="id" value="<%= category._id %>" required>
                            </div>
                        </div>
                        <div style="display: flex;
                            margin: 1rem;
                            flex-direction: column;">
                            <div><label for="categoryStatus">Status</label></div>
                            <div>
                                <select name="categoryStatus" class="form-select" id="categoryStatus" style="width: 23vw;
                                    height: 6.5vh;">
                                    <option value="true" if()>List</option>
                                    <option value="false">Don't List</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div style="margin: 2rem">
                        <div>
                            <label for="description">Description</label>
                        </div>
                        <div>
                            <textarea name="description" class="form-control" id="description" cols="60" rows="10"
                                required>
                                <%=category.description%>
                        </textarea>
                        </div>
                    </div>
                    <div>
                        <div style="display: flex;
                            flex-direction: row;
                            justify-content: flex-end;
                            margin: 1rem;">
                            <button class="button" type="submit" form="edit_product" style="position: relative;
                                overflow: hidden;
                                width: 13rem;
                                height: 3rem;
                                padding: 0 2rem;
                                border-radius: 1.5rem;
                                background: #15161d;
                                background-size: 400%;
                                color: #fff;
                                border: none;
                                cursor: pointer;">
                                <span class="button-content">UPDATE CATEGORY</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <style>
            ::-webkit-scrollbar {
                display: none;
            }

            /* input style */

            .input-style {
                padding: 10px;
                border: 2px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
                color: #555;
                outline: none;
            }

            .input-style:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

            /* --------------------------- */
            .button:hover::before {
                transform: scaleX(1);
            }

            .button-content {
                position: relative;
                z-index: 1;
            }

            .button::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                transform: scaleX(0);
                transform-origin: 0 50%;
                width: 100%;
                height: inherit;
                border-radius: inherit;
                background: linear-gradient(82.3deg,
                        rgb(210, 71, 71) 10.8%,
                        rgb(221, 19, 19) 94.3%);
                transition: all 0.475s;
            }

            .sidepanel a:hover {
                color: black;
                text-decoration: none;
            }

            a {
                text-decoration: none;
                color: #15161D;
                align-items: center;
            }

            .options {
                display: flex;
                flex-direction: row;
            }

            .logo {
                margin: 0.5rem;
            }

            .text {
                margin: 0.6rem;
            }

            p,
            h2 {
                color: white;
            }

            .fa-heart:before {
                content: "\f004";
                color: white;
            }

            .fa-cart-shopping:before {
                content: "\f004";
                color: white;
            }
        </style>

    </main>

